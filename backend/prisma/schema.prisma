generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Email {
  id          Int      @id @default(autoincrement())
  toEmail     String
  subject     String
  body        String
  scheduledAt DateTime
  sentAt      DateTime?
  status      String
  jobId       String?
  createdAt   DateTime @default(now())
}
